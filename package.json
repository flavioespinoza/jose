{
  "name": "@panva/jose",
  "version": "1.0.2",
  "description": "JSON Web Almost Everything - JWA, JWS, JWE, JWK, JWT, JWKS for Node.js with minimal dependencies",
  "keywords": [
    "compact",
    "decode",
    "decrypt",
    "encrypt",
    "flattened",
    "general",
    "jose",
    "jwa",
    "jwe",
    "jwk",
    "jwks",
    "jws",
    "jwt",
    "jsonwebtoken",
    "secp256k1",
    "eddsa",
    "sign",
    "verify"
  ],
  "homepage": "https://github.com/panva/jose",
  "repository": "panva/jose",
  "license": "MIT",
  "author": "Filip Skokan <panva.ip@gmail.com>",
  "files": [
    "lib",
    "LICENSE_THIRD_PARTY"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "coverage": "nyc ava",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "test": "ava",
    "watch": "ava --watch"
  },
  "dependencies": {
    "asn1.js": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "ava": "^1.2.1",
    "husky": "^2.1.0",
    "nyc": "^14.0.0",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "test/**/*.test.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "nyc": {
    "all": true,
    "cache": false,
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
